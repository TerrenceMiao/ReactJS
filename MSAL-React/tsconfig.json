{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["node", "jest", "react"]
  }
}
